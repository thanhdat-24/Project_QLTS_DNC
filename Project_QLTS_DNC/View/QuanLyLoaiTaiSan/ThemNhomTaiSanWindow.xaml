<Window x:Class="Project_QLTS_DNC.View.QuanLyTaiSan.ThemNhomTaiSanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thêm Nhóm Tài Sản" 
        Height="500" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            BorderThickness="1"
            BorderBrush="#E0E0E0">
        <Border.Effect>
            <DropShadowEffect Color="#404040" 
                               ShadowDepth="3" 
                               BlurRadius="10" 
                               Direction="-45" 
                               Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <Grid Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="THÊM MỚI NHÓM TÀI SẢN" 
                           Grid.Column="0" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="15,0,0,0"/>

                <Button x:Name="btnDong" 
                        Grid.Column="1" 
                        Style="{StaticResource MaterialDesignIconButton}"
                        Foreground="White"
                        Margin="0,0,10,0"
                        Width="40" Height="40">
                    <materialDesign:PackIcon Kind="Close" Width="24" Height="24"/>
                </Button>
            </Grid>

            <!-- Nội dung form -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Loại Tài Sản -->
                <ComboBox x:Name="cboLoaiTaiSan" 
                          Grid.Row="0" 
                          materialDesign:HintAssist.Hint="Chọn Loại Tài Sản" 
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,5,0,15"
                          SelectionChanged="cboLoaiTaiSan_SelectionChanged"/>

                <!-- Cảnh báo khi chọn Loại Tài Sản có QuanLyRieng = true -->
                <Border x:Name="borderCanhBao" 
                        Grid.Row="1" 
                        Background="#FFF9E6" 
                        BorderBrush="#FFEAC4" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="10" 
                        Margin="0,0,0,15" 
                        Visibility="Collapsed"
                        MinHeight="60">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Alert" 
                                               Grid.Column="0"
                                               Foreground="#FF9800" 
                                               Width="20" 
                                               Height="20" 
                                               VerticalAlignment="Top" 
                                               Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1"
                                 Text="Bạn muốn thêm mới với loại tài sản này thì phải cấu hình sức chứa nếu muốn bàn giao và đưa vào sử dụng về sau." 
                                 TextWrapping="Wrap" 
                                 Foreground="#FF6000"/>
                    </Grid>
                </Border>

                <!-- Tên Nhóm Tài Sản -->
                <TextBox x:Name="txtTenNhom" 
                         Grid.Row="2" 
                         materialDesign:HintAssist.Hint="Tên Nhóm Tài Sản" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <!-- Mô Tả -->
                <TextBox x:Name="txtMoTa" 
                         Grid.Row="3" 
                         materialDesign:HintAssist.Hint="Mô Tả" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="100"
                         Margin="0,0,0,15"/>
            </Grid>

            <!-- Nút điều khiển -->
            <Grid Grid.Row="2" Margin="20,0,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Margin="0 0 16 0" 
                        x:Name="btnHuy" Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="btnDong_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" Margin="0 0 8 0"/>
                        <TextBlock Text="HUỶ BỎ"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnLuu" 
                        Grid.Column="1" 
                        Margin="10,0,0,0"
                        Background="{StaticResource PrimaryHueMidBrush}"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="btnLuu_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Margin="0 0 8 0"/>
                        <TextBlock Text="LƯU LẠI"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>