<UserControl x:Class="Project_QLTS_DNC.View.CaiDat.CaiDatPhieuInForm"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_QLTS_DNC.View.CaiDat"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image x:Name="imgLogo" Grid.Column="0" Width="60" Height="60" Margin="5" Stretch="Uniform"/>

                <!-- Company Info -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="txtCompanyName" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="txtCompanyInfo1" FontSize="11" Margin="0,2,0,0"/>
                    <TextBlock x:Name="txtCompanyInfo2" FontSize="11" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Header Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnPrint" Content="In phiếu" Width="80" Height="30" Margin="5"/>
                    <Button x:Name="btnExport" Content="Xuất PDF" Width="80" Height="30" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Section -->
        <Border Grid.Row="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="*"/>
                    <!-- Dynamic Content -->
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock x:Name="txtTitle" Grid.Row="0" FontSize="18" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- Dynamic Content Container -->
                <ContentControl x:Name="contentSection" Grid.Row="1"/>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Footer Text -->
                <TextBlock x:Name="txtFooterText" Grid.Column="0" VerticalAlignment="Center" 
                           Text="Phần mềm quản lý tài sản DNC"/>

                <!-- Status and Date -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="txtStatus" Text="Trạng thái: Sẵn sàng" Margin="0,0,15,0"/>
                    <TextBlock x:Name="txtDateTime" Text="{Binding Source={x:Static system:DateTime.Now}, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                               xmlns:system="clr-namespace:System;assembly=mscorlib"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>