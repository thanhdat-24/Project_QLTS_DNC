<UserControl x:Class="Project_QLTS_DNC.View.CaiDat.MauBieuVaBaoCaoForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Project_QLTS_DNC.View.CaiDat"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="CẤU HÌNH MẪU BIỂU VÀ BÁO CÁO"
                   FontSize="22" FontWeight="Bold" Foreground="#2E86C1"
                   Margin="0 0 0 15"/>

        <!-- Nội dung cấu hình -->
        <StackPanel Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="0,0,0,10"/>
                </Style>
            </StackPanel.Resources>

            <!-- Các phần tử bên trong sẽ có margin cách nhau 10 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Loại mẫu:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbLoaiMau" Width="250"/>
            </StackPanel>

            <!-- Tiếp tục các phần tử khác -->
        </StackPanel>


        <!-- Nút thao tác -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Xem trước" Width="100" Click="BtnXemTruoc_Click"/>
            <Button Content="Lưu" Width="100" Click="BtnLuu_Click"/>
            <Button Content="In thử" Width="100" Click="BtnInThu_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
