<Window x:Class="Project_QLTS_DNC.View.QuanLyPhieu.ChiTietMuaMoiView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Chi tiết phiếu nhập"
        Height="700"
        Width="900"
        Background="{DynamicResource MaterialDesignPaper}"
        WindowStartupLocation="CenterScreen"
        TextElement.FontSize="13"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="Custom" Padding="16">
            <materialDesign:ColorZone.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2196F3" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="1"/>
                </LinearGradientBrush>
            </materialDesign:ColorZone.Background>
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="ClipboardTextOutline" Width="32" Height="32" Margin="0 0 16 0" Foreground="White"/>
                <TextBlock Text="CHI TIẾT PHIẾU MUA MỚI TÀI SẢN" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Nội dung -->
        <ScrollViewer Grid.Row="1" Margin="16">
            <StackPanel >

                <!-- Thông tin phiếu nhập -->
                <materialDesign:Card Padding="16" UniformCornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="THÔNG TIN PHIẾU MUA MỚI TÀI SẢN" TextAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0 0 0 16" Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="234*"/>
                                <ColumnDefinition Width="332*"/>
                                <ColumnDefinition Width="19*"/>
                                <ColumnDefinition Width="234*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Cột 1 -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0 0 16 8">
                                <TextBlock Text="Mã phiếu mua mới" FontWeight="Medium" Margin="0 0 0 4"/>
                                <TextBlock x:Name="txtMaPhieuMuaMoi" Text="---" />
                            </StackPanel>

                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0 0 16 8">
                                <TextBlock Text="Đơn vị đề nghị" FontWeight="Medium" Margin="0 0 0 4"/>
                                <TextBlock x:Name="txtDonViDeNghi" Text="---" />
                            </StackPanel>

                            <!-- Cột 2 -->
                            <StackPanel Grid.Row="0" Margin="6,0,16,8" Grid.Column="1">
                                <TextBlock Text="Ngày đề nghị" FontWeight="Medium" Margin="0 0 0 4"/>
                                <TextBlock x:Name="txtNgayDeNghi" Text="---" />
                            </StackPanel>

                            <StackPanel Grid.Row="1" Margin="6,0,16,8" Grid.Column="1">
                                <TextBlock Text="Lý do" FontWeight="Medium" Margin="0 0 0 4"/>
                                <TextBlock x:Name="txtLyDo" Text="---" />
                            </StackPanel>

                            <!-- Cột 3 -->
                            <StackPanel Grid.Column="3" Grid.Row="0" Margin="29,0,0,8">
                                <TextBlock Text="Nhân viên đề nghị" FontWeight="Medium" Margin="0 0 0 4"/>
                                <TextBlock x:Name="txtNhanVienDeNghi" Text="---" />
                            </StackPanel>

                            <StackPanel Grid.Column="3" Grid.Row="1" Margin="29,0,0,8">
                                <TextBlock Text="Ghi chú" FontWeight="Medium" Margin="0 0 0 4"/>
                                <TextBlock x:Name="txtGhiChu" Text="---" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Danh sách chi tiết tài sản -->
                <materialDesign:Card Padding="16" UniformCornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="DANH SÁCH TÀI SẢN" TextAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0 0 0 16" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <DataGrid x:Name="gridChiTiet" 
          AutoGenerateColumns="False" 
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          IsReadOnly="True"
          Background="Transparent"
          BorderThickness="1"
          BorderBrush="{DynamicResource MaterialDesignDivider}"
          HeadersVisibility="Column"
          HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
          VerticalGridLinesBrush="{DynamicResource MaterialDesignDivider}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tên tài sản" Binding="{Binding TenTaiSan}" Width="*"/>
                                <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" Width="1*"/>
                                <DataGridTextColumn Header="Đơn vị tính" Binding="{Binding DonViTinh}" Width="*"/>
                                <DataGridTextColumn Header="Mô tả" Binding="{Binding MoTa}" Width="*"/>
                                <DataGridTextColumn Header="Giá dự kiến" Binding="{Binding DuKienGia}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Grid Grid.Row="2" Background="{DynamicResource MaterialDesignBackground}" Margin="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ĐÓNG" 
                        Style="{StaticResource MaterialDesignRaisedButton}" 
                        Width="100"
                        Click="BtnClose_Click"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
