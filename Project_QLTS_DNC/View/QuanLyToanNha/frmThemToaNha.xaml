<Window x:Class="Project_QLTS_DNC.View.QuanLyToanNha.frmThemToaNha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        mc:Ignorable="d"
        Title="Thêm Tòa nhà"
        Height="480"
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="White"
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="#E0E0E0" Margin="0,0,0,50">
        <Border.Effect>
            <DropShadowEffect Color="#404040"
                              ShadowDepth="3"
                              BlurRadius="10"
                              Direction="-45"
                              Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="0,0,0,-21">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Tiêu đề -->
                <RowDefinition Height="*"/>
                <!-- Nội dung -->
                <RowDefinition Height="Auto"/>
                <!-- Nút -->
            </Grid.RowDefinitions>

            <!-- TIÊU ĐỀ -->
            <Grid Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="THÊM MỚI TÒA NHÀ"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>

                <Button x:Name="btnDong"
                        Grid.Column="1"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Foreground="White"
                        Margin="0,0,10,0"
                        Width="40" Height="40"
                        Click="btnDong_Click">
                    <materialDesign:PackIcon Kind="Close" Width="24" Height="24"/>
                </Button>
            </Grid>

            <!-- NỘI DUNG FORM -->
            <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Top">
                <TextBox x:Name="txtTenToaNha"
                         materialDesign:HintAssist.Hint="Nhập tên tòa nhà"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="txtDiaChiTN"
                         materialDesign:HintAssist.Hint="Nhập địa chỉ tòa nhà"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="txtSoDienThoaiTN"
                         materialDesign:HintAssist.Hint="Nhập số điện thoại"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"
                         MaxLength="11"
                        />
                <TextBox x:Name="txtMoTaTN"
                         materialDesign:HintAssist.Hint="Nhập mô tả"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="100"
                         VerticalScrollBarVisibility="Auto"
                          Margin="0,3,0,0"/>
            </StackPanel>

            <!-- NÚT -->
            <Grid Grid.Row="1" Margin="20,330,20,35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnHuy"
                        Grid.Column="0"
                        Margin="0 0 16 0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="btnHuy_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Close" Margin="0 0 8 0"/>
                        <TextBlock Text="HUỶ"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnLuu"
                        Grid.Column="1"
                        Background="{StaticResource PrimaryHueMidBrush}"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="btnLuu_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="ContentSave" Margin="0 0 8 0"/>
                        <TextBlock Text="LƯU"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>