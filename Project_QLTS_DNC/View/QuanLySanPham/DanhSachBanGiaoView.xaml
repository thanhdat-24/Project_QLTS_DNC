<UserControl x:Class="Project_QLTS_DNC.View.QuanLyTaiSan.DanhSachBanGiaoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="White"
             Width="Auto" Height="Auto">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Sử dụng giao diện Light -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Định nghĩa Style cho hàng DataGrid khi rê chuột -->
            <Style x:Key="HoverRowStyle" TargetType="DataGridRow">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="Black"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="LightGray"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Search & Filter -->
            <RowDefinition Height="*"/>
            <!-- DataGrid Card -->
            <RowDefinition Height="Auto"/>
            <!-- StatusBar -->
        </Grid.RowDefinitions>

        <!-- Header: Title & Add Button -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="DANH SÁCH PHIẾU BÀN GIAO TÀI SẢN" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                       VerticalAlignment="Center"/>
            <Button Grid.Column="1" 
                    x:Name="btnAdd" 
                    Click="btnThemBanGiao_click"
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    materialDesign:ButtonAssist.CornerRadius="8" 
                    Background="{StaticResource SecondaryCreate}" 
                    Foreground="{StaticResource SecondaryAccentForegroundBrush}" 
                    ToolTip="Thêm phiếu bàn giao mới"
                    Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" Margin="0 0 8 0"/>
                    <TextBlock Text="THÊM PHIẾU BÀN GIAO"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Search & Filter -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Search Card -->
            <materialDesign:Card Grid.Column="0" Padding="8" Margin="0,0,16,0" UniformCornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="Search" 
                                             Grid.Column="0" 
                                             VerticalAlignment="Center" 
                                             Margin="8,0" 
                                             Foreground="{StaticResource PrimaryHueMidBrush}"/>
                    <TextBox Grid.Column="1" 
                             x:Name="txtSearch" 
                             TextChanged="txtSearch_TextChanged" 
                             materialDesign:HintAssist.Hint="Tìm kiếm nội dung, tên nhân viên..." 
                             BorderThickness="0" 
                             VerticalAlignment="Center" 
                             Margin="8,0"
                             materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource PrimaryHueMidBrush}"/>
                    <Popup x:Name="popupSuggest"
                           PlacementTarget="{Binding ElementName=txtSearch}"
                           Placement="Bottom"
                           StaysOpen="False"
                           IsOpen="False">
                        <Border Background="White" BorderBrush="Gray" BorderThickness="1" MinWidth="200">
                            <ListBox x:Name="lstSuggest"
                                     MouseLeftButtonUp="lstSuggest_MouseLeftButtonUp"/>
                        </Border>
                    </Popup>

                    <Button Grid.Column="2" 
                            Style="{StaticResource MaterialDesignIconButton}" 
                            x:Name="btnSearch" 
                            Click="btnSearch_Click"
                            ToolTip="Tìm kiếm">
                        <materialDesign:PackIcon Kind="ArrowRight" Foreground="{StaticResource PrimaryHueMidBrush}"/>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- Filter: Phòng -->
            <ComboBox Grid.Column="1" 
                      x:Name="cboPhong" 
                      SelectionChanged="cboPhong_SelectionChanged"
                      materialDesign:HintAssist.Hint="Phòng" 
                      Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                      Width="180" 
                      Margin="0,0,16,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding TenPhong}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Filter: Trạng thái -->
            <ComboBox Grid.Column="2" 
                      x:Name="cboTrangThai" 
                      SelectionChanged="cboTrangThai_SelectionChanged"
                      materialDesign:HintAssist.Hint="Trạng thái" 
                      Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                      Width="150" 
                      Margin="0,0,16,0">
                <ComboBoxItem Content="Tất cả"/>
                <ComboBoxItem Content="Chờ duyệt"/>
                <ComboBoxItem Content="Đã duyệt"/>
                <ComboBoxItem Content="Từ chối duyệt"/>
            </ComboBox>

            <!-- Refresh button -->
            <Button Grid.Column="3"
                    x:Name="btnRefresh"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="Làm mới"
                    Click="btnRefresh_Click"
                    Width="40" Height="40">
                <materialDesign:PackIcon Kind="Refresh" Width="24" Height="24"/>
            </Button>
        </Grid>

        <!-- DataGrid in Card -->
        <materialDesign:Card Grid.Row="2" Margin="16" UniformCornerRadius="8">
            <DataGrid x:Name="dgBanGiao" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      CanUserAddRows="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8" 
                      materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                      BorderThickness="0" 
                      GridLinesVisibility="All" 
                      VerticalScrollBarVisibility="Auto"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      CanUserResizeColumns="True"
                      ColumnWidth="Auto">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}" 
                           BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}" 
                           BasedOn="{StaticResource HoverRowStyle}"/>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã bàn giao" Binding="{Binding MaBanGiaoTS}" Width="100" MinWidth="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Ngày bàn giao" Binding="{Binding NgayBanGiao, StringFormat='dd/MM/yyyy HH:mm'}" Width="150" MinWidth="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Người lập phiếu" Binding="{Binding TenNV}" Width="170" MinWidth="170">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Phòng" Binding="{Binding TenPhong}" Width="150" MinWidth="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tòa nhà" Binding="{Binding TenToaNha}" Width="150" MinWidth="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Nội dung" Binding="{Binding NoiDung}" Width="200" MinWidth="200">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThaiText}" Width="120" MinWidth="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TrangThaiText}" Value="Chờ duyệt">
                                        <Setter Property="Foreground" Value="#FF9800"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TrangThaiText}" Value="Đã duyệt">
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TrangThaiText}" Value="Từ chối duyệt">
                                        <Setter Property="Foreground" Value="#F44336"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Cột Tùy Chọn: Chi tiết, Duyệt/Từ chối và Xóa -->
                    <DataGridTemplateColumn Header="Tùy chọn" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Chi tiết -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Xem chi tiết"
                                            Margin="0,0,4,0"
                                            Click="btnChiTiet_Click"
                                            Tag="{Binding MaBanGiaoTS}">
                                        <materialDesign:PackIcon Kind="ViewList" Foreground="{StaticResource PrimaryHueLightBrush}"/>
                                    </Button>

                                    <!-- Duyệt -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Duyệt phiếu"
                                            Margin="0,0,4,0"
                                            Click="btnDuyet_Click"
                                            Tag="{Binding MaBanGiaoTS}"
                                            Visibility="{Binding TrangThaiText, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter='Chờ duyệt'}">
                                        <materialDesign:PackIcon Kind="CheckCircle" Foreground="#4CAF50"/>
                                    </Button>

                                    <!-- Từ chối -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Từ chối phiếu"
                                            Margin="0,0,4,0"
                                            Click="btnTuChoi_Click"
                                            Tag="{Binding MaBanGiaoTS}"
                                            Visibility="{Binding TrangThaiText, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter='Chờ duyệt'}">
                                        <materialDesign:PackIcon Kind="Cancel" Foreground="#F44336"/>
                                    </Button>

                                    <!-- Xóa -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Xóa"
                                            Click="btnDelete_Click"
                                            Tag="{Binding MaBanGiaoTS}">
                                        <materialDesign:PackIcon Kind="Delete" Foreground="#F44336"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!-- StatusBar -->
        <materialDesign:ColorZone Grid.Row="3" Mode="Standard" Padding="16" Name="StatusBar">
            <DockPanel>
                <TextBlock x:Name="txtStatus" Text="Tổng số phiếu bàn giao: 0" VerticalAlignment="Center"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            materialDesign:ButtonAssist.CornerRadius="8" 
                            Background="{DynamicResource SecondaryFileExcel}" 
                            Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                            x:Name="btnXuatExcel"
                            Click="btnXuatExcel_Click"
                            Margin="0 0 8 0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExcel" Margin="0 0 8 0"/>
                            <TextBlock Text="XUẤT EXCEL"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            materialDesign:ButtonAssist.CornerRadius="8" 
                            Background="{DynamicResource SecondaryFileFDP}" 
                            Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                            x:Name="btnXuatPDF"
                            Click="btnXuatPDF_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilePdfBox" Margin="0 0 8 0"/>
                            <TextBlock Text="XUẤT PDF"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>