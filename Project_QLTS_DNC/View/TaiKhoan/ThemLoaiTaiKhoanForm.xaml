<Window x:Class="Project_QLTS_DNC.View.TaiKhoan.ThemLoaiTaiKhoanForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Thêm loại tài khoản" Height="423" Width="464"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nội dung -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <materialDesign:Card Margin="16" Padding="16">
                <StackPanel>
                    <!-- Tên loại tài khoản -->
                    <TextBlock Text="Tên loại tài khoản:" Margin="0,8,0,4"/>
                    <TextBox x:Name="txtTenLoaiTaiKhoan"
                             materialDesign:HintAssist.Hint="Nhập tên loại tài khoản"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,10" />

                    <!-- Mô Tả -->
                    <TextBlock Text="Mô tả:" Margin="0,8,0,4"/>
                    <TextBox x:Name="txtMoTa"
                             materialDesign:HintAssist.Hint="Nhập mô tả"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,0"
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="80"/>
                </StackPanel>
            </materialDesign:Card>
        </ScrollViewer>

        <!-- Nút -->
        <Grid Grid.Row="1" Background="{DynamicResource MaterialDesignPaper}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,16,12">
                <Button x:Name="btnHuy" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0 0 12 0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" Margin="0 0 8 0"/>
                        <TextBlock Text="HUỶ"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnLuu" Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{StaticResource PrimaryHueMidBrush}" Foreground="White" Click="btnLuu_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Margin="0 0 8 0"/>
                        <TextBlock Text="LƯU"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
